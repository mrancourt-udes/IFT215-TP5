<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".HomeFragment">


    <!-- LISTE DES MESSAGES -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="108dp"
            android:background="@drawable/layout_border_bottom"
            android:layout_gravity="left|top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/people_1"
                android:id="@+id/image_message5"
                android:layout_gravity="left|center_vertical"
                android:padding="10dp" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Connecté en tant que :"
                android:id="@+id/textView7"
                android:layout_gravity="right|top"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Christopher Sanders"
                android:id="@+id/textView12"
                android:layout_gravity="right|center_vertical" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ChristopherSanders@armyspy.com"
                android:id="@+id/textView13"
                android:layout_gravity="right|bottom" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_border_bottom"
            android:padding="20dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:layout_gravity="right|center_vertical"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Partager ma position"
                android:id="@+id/textView14"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_border_bottom"
            android:padding="20dp" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_gravity="right|center_vertical"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Notifications"
                android:id="@+id/textView19"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ripple_border_bottom"
            android:padding="20dp"
            android:clickable="true"
            android:focusable="false"
            android:longClickable="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Couleur de fond"
                android:id="@+id/textView15"
                android:layout_gravity="left|center_vertical" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/layout_border_all"
                android:padding="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_gravity="center_horizontal|top"
                    android:minWidth="28dp"
                    android:minHeight="28dp"
                    android:background="@color/material_deep_teal_200" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ripple_border_bottom"
            android:padding="20dp"
            android:clickable="true"
            android:focusable="false"
            android:longClickable="false" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Se déconnecter"
                android:id="@+id/textView17"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
